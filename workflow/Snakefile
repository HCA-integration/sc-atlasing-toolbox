    'metrics': dict(
        parameters=workflow.source_path('metrics/params.tsv'),
        config_params=['label', 'batch', 'methods', 'unintegrated'],
        wildcard_names=['label', 'batch', 'metric'],
        rename_config_params={'methods': 'metric'},
