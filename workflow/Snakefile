    ),
    'integration': dict(
        parameters=workflow.source_path('integration/params.tsv'),
        config_params=['methods', 'batch', 'label', 'var_mask'],
        wildcard_names=['method', 'batch', 'label', 'var_mask', 'output_type'],
        rename_config_params={'methods': 'method'},
