        # rules.metrics_all.input
        rules.dependency_graph.input
    default_target: True


modules = [
    'load_data',
    'exploration',
    'subset',
    'integration',
    'metrics',
    'preprocessing',
    'label_transfer',
    'label_harmonization'
]

rule dependency_graph:
    input:
        expand(
            rules.common_dependency_graph.input,
            images=config['images'],
            target=[f'{_module}_all' for _module in modules] + ['all']
        )
