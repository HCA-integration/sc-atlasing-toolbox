"""
Preprocessing
"""
from pathlib import Path
import pandas as pd

from utils.environments import get_env
from utils.ModuleConfig import ModuleConfig


mcfg = ModuleConfig(
    module_name='preprocessing',
    config=config,
    config_params=[
        'assemble',
        'batch',
        'colors',
        'highly_variable_genes',
        'lineage',
        'neighbors',
        'pca',
        'raw_counts',
        'scale',
        'umap',
        'backed',
        'dask',
    ],
    dtypes={
        'backed': bool,
        'dask': bool,
    },
)
paramspace = mcfg.get_paramspace()


wildcard_constraints:
    dataset='\w+',


module common:
    snakefile: "../common/Snakefile"
    config: config

use rule * from common as common_ *

module preprocessing:
    snakefile: "rules.smk"
    config: config

include: 'rules/assemble.smk'
include: 'rules/plots.smk'


rule plots_all:
    input:
        mcfg.get_output_files(rules.preprocessing_plot_pca.output),
        mcfg.get_output_files(rules.preprocessing_plot_umap.output),


rule all:
    input:
        mcfg.get_output_files(rules.assemble.output),
        rules.plots_all.input,
    default_target: True


rule dependency_graph:
    input:
        expand(
            rules.common_dependency_graph.input,
            images=mcfg.image_dir,
            target='all'
        )
